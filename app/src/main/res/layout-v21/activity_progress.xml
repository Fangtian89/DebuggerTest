<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProgressActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp">

    <ProgressBar
        android:id="@+id/pb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme"
        android:layout_marginTop="10dp"/>
    <ProgressBar
        android:id="@+id/pb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@android:style/Widget.ProgressBar"
        android:layout_marginTop="10dp"/>

<!--    系统的style-->

<!--最普通的progress bar 形式-->
    <ProgressBar
        android:id="@+id/pb3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_marginTop="10dp"
        android:max="100"
        android:progress="10"
       />
<!--    android:secondaryProgress="30"可以加入二级属性-->

    <!--第二普通的progress bar 形式-->
    <ProgressBar
        android:id="@+id/pb4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@android:style/Widget.Material.ProgressBar.Horizontal"
        android:layout_marginTop="20dp"
        android:max="100"
        android:progress="10"
        android:secondaryProgress="30" />

    <Button android:id="@+id/btn_start"
       android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simulate Progress"
        android:layout_marginTop="20dp"/>
    <ProgressBar
        android:id="@+id/pb5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MyProgressBar"
        android:layout_marginTop="20dp"
         />


<!--    自己做的 Style :   style="@style/MyProgressBar"， MyProgressBar 在 Styles 里面-->
<!--    则删掉  android:indeterminateDrawable="@drawable/bg_progress"-->
    <!--  或者系统自带样式 style="@android:style/Widget.Material.ProgressBar"
-->

    <Button
        android:id="@+id/btn_progress_dialog1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ProgressDiaglog1"
        android:layout_marginTop="20dp"/>

    <Button
    android:id="@+id/btn_progress_dialog2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="ProgressDiaglog2"
    android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_progress_dialog3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ProgressDiaglog3"
        android:layout_marginTop="20dp"/>

</LinearLayout>